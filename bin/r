#!/bin/bash

../../../../tomcat/current/bin/shutdown.sh

if [[ "$?" != "0" ]]
then
  echo "server stop failed"
  exit 1
fi

for i in account system
do

echo "copying ${i}"

cp "../anontion/build/libs/${i}-1.0.0.war" "../../../../tomcat/current/webapps/${i}.war"

if [[ "$?" != "0" ]]
then
  echo "war copy failed $i"
  exit 1
fi

echo "completed ${i}"

done

../../../../tomcat/current/bin/startup.sh

echo "fini."


